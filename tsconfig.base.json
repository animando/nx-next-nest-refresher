{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@animando/inventory": ["libs/inventory/src/index.ts"],
      "@animando/logger": ["libs/logger/src/index.ts"],
      "@animando/my-plugin": ["tools/my-plugin/src/index.ts"],
      "@animando/queue": ["libs/queue/src/index.ts"],
      "@animando/rabbit": ["libs/rabbit/src/index.ts"],
      "@animando/react-utils": ["libs/react-utils/src/index.ts"],
      "@animando/redis": ["infra/redis/src/index.ts"],
      "@animando/transaction": ["libs/transaction/src/index.ts"],
      "@animando/ui-components": ["libs/ui-components/src/index.ts"],
      "@animando/utils": ["libs/utils/src/index.ts"],
      "@animando/clerk-auth": ["libs/clerk-auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
